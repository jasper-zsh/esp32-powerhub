# Enable Bluetooth and NimBLE
CONFIG_BT_ENABLED=y
CONFIG_BT_NIMBLE_ENABLED=y
CONFIG_BT_BLUEDROID_ENABLED=n

# Target: ESP32S3
CONFIG_IDF_TARGET_ESP32S3=y

# NimBLE GAP device name max length
CONFIG_BT_NIMBLE_SVC_GAP_DEVICE_NAME_MAX_LEN=24

# Reduce logs a bit
CONFIG_NIMBLE_STACK_LOG_LEVEL_INFO=y
CONFIG_NIMBLE_STACK_LOG_LEVEL_DEBUG=n

